{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "uv run uvicorn ldaca_web_app_backend.main:app --reload --port 8001",
            "options": {
                "cwd": "${workspaceFolder}/ldaca_web_app/backend",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/ldaca_web_app/backend/src"
                }
            },
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Frontend",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/ldaca_web_app/frontend"
            },
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
        "label": "Start Backend Local",
        "type": "shell",
        "command": "${workspaceFolder}/.venv/bin/python",
        "args": [
            "-m", "uvicorn",
            "ldaca_web_app_backend.main:app",
            "--reload",
            "--port", "8001"
        ],
        "options": {
            "cwd": "${workspaceFolder}/ldaca_web_app/backend",
            "env": {
            "PYTHONPATH": "${workspaceFolder}/ldaca_web_app/backend/src"
            }
        },
        "isBackground": true
        }
    ]
}