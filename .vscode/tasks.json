{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "uv run uvicorn ldaca_web_app_backend.main:app --reload --port 8001",
            "options": {
                "cwd": "${workspaceFolder}/ldaca_web_app/backend",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/ldaca_web_app/backend/src"
                }
            },
            "problemMatcher": [],
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Frontend",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/ldaca_web_app/frontend"
            },
            "problemMatcher": [],
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Prepare backend (MacOS)",
            "type": "shell",
            "command": "uv run python scripts/package_backend_runtime.py --clean",
            "options": {
                "cwd": "${workspaceFolder}/ldaca_web_app/backend"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Compile Tauri App (MacOS)",
            "type": "shell",
            "command": "npm run desktop:build:mac",
            "options": {
                "cwd": "${workspaceFolder}/ldaca_web_app/frontend"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}